{
  "name": "lazyscripts.js",
  "title": "LazyScripts",
  "version": "0.6.0",
  "description": "Delay script loading until user interaction.",
  "keywords": [
    "lazy",
    "delay",
    "loading"
  ],
  "license": "MIT",
  "author": {
    "name": "Gene Alyson Fortunado Torcende",
    "email": "genealyson.torcende@gmail.com"
  },
  "files": [
    "/dist"
  ],
  "browser": "dist/cdn.min.js",
  "unpkg": "dist/cdn.min.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kermage/lazyscripts.git"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.8.1",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/module.d.mts",
        "default": "./dist/module.mjs"
      },
      "require": {
        "types": "./dist/module.d.cts",
        "default": "./dist/module.cjs"
      }
    }
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.1.2"
  },
  "scripts": {
    "lint": "prettier -l",
    "fix": "prettier -w",
    "test": "vitest",
    "build": "unbuild",
    "prepublishOnly": "pnpm build"
  }
}
